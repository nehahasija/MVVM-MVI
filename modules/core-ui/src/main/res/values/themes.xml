<resources>

    <style name="Ui.Theme.SplashScreen" parent="Theme.SplashScreen">
        <item name="postSplashScreenTheme">@style/Ui.Theme.Template.NoActionBar</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ui_ic_launcher</item>
        <item name="windowSplashScreenBackground">@color/ui_window_background</item>
    </style>

    <style name="Ui.Theme.Platform.Template" parent="android:Theme.Material.Light" />

    <style name="Ui.Theme.Base.Template" parent="Ui.Theme.Platform.Template">
        <item name="android:windowActionModeOverlay">true</item>
    </style>

    <style name="Ui.Theme.Template" parent="Ui.Theme.Base.Template" />

    <style name="Ui.Theme.Template.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
